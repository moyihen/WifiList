<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/dialog"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:text="提示"
        android:textSize="20sp"
        android:textColor="#424242"
        android:gravity="center"
        android:id="@+id/custom_dialog_title"
        android:layout_gravity="center_horizontal"
        android:layout_height="45dp"/>
    <TextView
        android:layout_width="match_parent"
        android:background="#ebebeb"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:text="状态消息"
            android:layout_marginLeft="10dp"
            android:textColor="#5c5c5c"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="未连接"
            android:textColor="#388E8E"
            android:id="@+id/custom_dialog_wifi_state"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:background="#ebebeb"
            android:layout_alignParentBottom="true"
            android:layout_height="0.5dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:text="信号强度"
            android:textColor="#5c5c5c"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="未知"
            android:textColor="#388E8E"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/custom_dialog_wifi_level"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:background="#ebebeb"
            android:layout_alignParentBottom="true"
            android:layout_height="0.5dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:text="连接速度"
            android:textColor="#5c5c5c"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="mbps"
            android:textColor="#388E8E"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:id="@+id/custom_dialog_wifi_speed"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:background="#ebebeb"
            android:layout_alignParentBottom="true"
            android:layout_height="0.5dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:text="频率"
            android:layout_marginLeft="10dp"
            android:textColor="#5c5c5c"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="GHz"
            android:textColor="#388E8E"
            android:id="@+id/custom_dialog_wifi_hz"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:background="#ebebeb"
            android:layout_alignParentBottom="true"
            android:layout_height="0.5dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:text="加密类型"
            android:layout_marginLeft="10dp"
            android:textColor="#5c5c5c"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="wpa2"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textColor="#388E8E"
            android:maxEms="20"
            android:ellipsize="end"
            android:singleLine="true"
            android:id="@+id/custom_dialog_wifi_type"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:background="#ebebeb"
            android:layout_alignParentBottom="true"
            android:layout_height="0.5dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="60dp">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="取消"
            android:layout_marginLeft="10dp"
            android:id="@+id/no"
            android:layout_marginRight="5dp"
            android:background="@drawable/select_dialog_bt_bg"
            android:layout_height="40dp"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/yes"
            android:text="不保存"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/select_dialog_bt_bg"
            android:layout_height="40dp"/>
    </LinearLayout>
</LinearLayout>